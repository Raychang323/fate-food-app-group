<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="pref_category_notifications"
        app:title="通知設定">

        <Preference
            app:key="pref_notification_settings"
            app:title="設定通知時間與日期"
            app:summary="點擊以設定每日宵夜推薦的通知"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="pref_category_blacklist"
        app:title="宵夜黑名單">

        <Preference
            app:key="pref_supper_blacklist"
            app:title="管理宵夜黑名單"
            app:summary="點擊以設定您不想被推薦的宵夜店家或類型"/>

    </PreferenceCategory>

</PreferenceScreen>