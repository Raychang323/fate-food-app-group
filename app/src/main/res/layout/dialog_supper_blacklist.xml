<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_blacklist_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textView_blacklist_description" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_blacklist_description"
        android:layout_marginBottom="8dp"/>

    <!-- NEW WARNING TEXTVIEW ADDED HERE -->
    <TextView
        android:id="@+id/textView_blacklist_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_blacklist_warning_too_many_exclusions"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" 
        android:textColor="?android:attr/textColorSecondary" 
        android:layout_marginBottom="16dp"/> 

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="200dp"
        android:contentDescription="@string/content_description_blacklist_scrollview">

        <LinearLayout
            android:id="@+id/checkbox_container_blacklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- CheckBoxes will be added here programmatically -->
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="end">

        <Button
            android:id="@+id/button_back_blacklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_skip_step"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/button_save_blacklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_save_and_finish"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>

</LinearLayout>