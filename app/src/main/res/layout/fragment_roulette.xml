<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recommendation.RouletteFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView_roulette_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美食輪盤"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/textView_roulette_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="不知道要吃什麼嗎？按下按鈕，讓我們為您隨機挑選一家餐廳！"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/textView_roulette_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/button_spin_roulette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="開始選餐！"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView_roulette_description"
        app:layout_constraintBottom_toTopOf="@+id/textView_selected_roulette_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/textView_selected_roulette_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="?attr/colorPrimary"
        android:visibility="invisible" 
        tools:text="恭喜！選中了：海之味壽司屋"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/button_spin_roulette"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
