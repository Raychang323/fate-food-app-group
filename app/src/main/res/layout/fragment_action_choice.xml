<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.main.ActionChoiceFragment">

    <TextView
        android:id="@+id/textView_action_choice_prompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="推薦已準備好！您想如何查看？"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_go_to_restaurant_list_from_choice" />

    <Button
        android:id="@+id/button_go_to_restaurant_list_from_choice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="查看AI推薦 (列表)"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button_go_to_roulette_from_choice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_go_to_roulette_from_choice"
        style="?attr/materialButtonOutlinedStyle" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="試試手氣 (輪盤)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
